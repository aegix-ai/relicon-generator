# Relicon Environment Configuration
# Copy this file to .env and fill in your API keys

# Required API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
LUMA_API_KEY=luma-b365459a-20f6-4d36-9151-2eaf5d0ef5b7-e45d3519-bfce-4c44-aba9-317d07897711
ELEVENLABS_API_KEY=your-elevenlabs-key-here

# Database (optional - defaults to SQLite)
DATABASE_URL=postgresql://user:password@localhost/relicon

# Redis (optional - defaults to in-memory storage)
REDIS_HOST=localhost
REDIS_PORT=6379

# Storage Directories
OUTPUT_DIR=outputs
TEMP_DIR=/tmp/relicon

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Performance Settings
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=1800

# Development Settings
NODE_ENV=development
DEBUG=true
